{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .form-item {
            padding: 12px 6px
        }
    </style>
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    <div class="form-item">{{ form_row(registrationForm.email) }}</div>

    <div class="form-item">{{ form_row(registrationForm.title) }}</div>
    <div class="form-item">{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}</div>

    <div class="form-item">
        <button type="submit" class="btn">Register</button>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}

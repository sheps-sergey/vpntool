{% extends 'base.html.twig' %}

{% block title %}Hello FollowController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .warning {
            color: red
        }

        .normal {
            color: green
        }

        .update-button {
            background: #2E83FF;
            color: white;
            font-size: 19pt;
            border: 1px solid #2E83FF;
            padding: 2px 6px;
            border-radius: 5px;
        }
    </style>
    <script>
        setInterval(function() {
            window.location.reload();
        }, 900000);
    </script>

    <div class="example-wrapper">

        Hello {{ app.user.title }} (<a href="/logout">Logout</a>)

    </div>
    <div class="example-wrapper code">
        {% if location is defined and location is not null %}
            Your current location is
            <span class="{% if location.isAllowedLocation %} normal  {% else %} warning {% endif %}">
                {{ location.city }}, {{ location.country }}
            </span>
        {% else %}
            Something went wrong with detection of your IP address. Please try again
        {% endif %}
        <br>This page will be refreshed every 15 min, but you can do it manually by the button below
    </div>
    <div class="example-wrapper">
        <a href="/follow"><button class="update-button">Refresh</button></a>
    </div>
{% endblock %}
